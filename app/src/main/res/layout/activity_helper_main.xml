<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HelperMainActivity"
    >








    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_mainpage_upper"
        android:orientation="vertical"
        android:id="@+id/helper_upper"


        android:gravity="bottom">
        <Switch
            android:id="@+id/help_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 전송"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"

            />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/helper_image_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_default"

        app:border_width="3dp"
        app:border_color="#80FFFFFF"
        android:layout_marginBottom="40dp"

     />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_margin="2dp"
            android:padding="2dp">

              <Button
                  style="?android:textAppearanceSmall"

                  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                android:id="@+id/helper_profile_change"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profilebtn_clicked"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
            <Button
                style="?android:textAppearanceSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 수정"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/helper_image_profile_change"
                android:background="@drawable/profilebtn_clicked" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout1"
        android:orientation="horizontal"

        android:layout_marginTop="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helper_upper"


        app:layout_constraintHorizontal_bias="0.5">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:orientation="vertical"
            android:layout_margin="0dp">
            <Button
                style="?android:textAppearanceSmall"

                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@drawable/lower_btn_clicked"
                android:id="@+id/helper_lower_btn1"
                android:text="시각"/>
            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/helper_lower_btn2"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/lower_btn_clicked"
                android:textColor="#FFFFFF"
                android:textStyle="bold"

                android:text="청각"/>
            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/helper_lower_btn3"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:background="@drawable/lower_btn_clicked"
                android:layout_weight="1"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="지체"/>
            <Button
                style="?android:textAppearanceSmall"
                android:id="@+id/helper_lower_btn4"
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:background="@drawable/lower_btn_clicked"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="발달"/>

        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >
            <TextView
                style="?android:textAppearanceSmall"
                android:id="@+id/helper_lower_text"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:background="@drawable/textbg"
                android:gravity="center"
                android:text="왼쪽의 버튼을 눌러 \n팁을 확인 할 수 있습니다."
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>



</android.support.constraint.ConstraintLayout>