<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelperMainActivity">








    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_mainpage_upper"
        android:orientation="vertical"

        android:gravity="bottom">
        <Switch
            android:id="@+id/help_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 전송"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"

            />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/helper_image_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_default"

        app:border_width="3dp"
        app:border_color="#80FFFFFF"
        android:layout_marginBottom="40dp"

     />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_margin="2dp"
            android:padding="2dp">

              <Button
                  android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                android:id="@+id/helper_profile_change"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profilebtn_clicked"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 수정"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/helper_image_profile_change"
                android:background="@drawable/profilebtn_clicked" />

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.LinearLayoutCompat>



</android.support.constraint.ConstraintLayout>