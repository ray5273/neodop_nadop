<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisabledMainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/ic_mainpage_upper"
        android:orientation="vertical"
        android:id="@+id/disabled_upper"

        android:gravity="bottom">
        <Switch
            android:id="@+id/help_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치 전송"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="end"
            android:visibility="invisible"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/disabled_image_profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_default"

            app:border_width="3dp"
            app:border_color="#80FFFFFF"
            android:layout_marginBottom="40dp"

            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_margin="2dp"
            android:padding="2dp">

            <Button
                style="?android:textAppearanceSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정"
                android:id="@+id/disabled_profile_change"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profilebtn_clicked"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
            <Button
                style="?android:textAppearanceSmall"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 수정"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:id="@+id/disabled_image_profile_change"
                android:background="@drawable/profilebtn_clicked" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disabled_upper">
        <TextView
            style="?android:textAppearanceSmall"
            android:id="@+id/disabled_lower_text"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/textbg"
            android:gravity="center"
            android:text="희망은 절대 당신을 버리지 않는다."
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="호출하기"
            android:id="@+id/disabled_call"
            android:background="@drawable/callbtn_selector"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.constraint.ConstraintLayout>