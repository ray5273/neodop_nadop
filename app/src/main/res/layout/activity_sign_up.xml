<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_page_background_nobtn"
    tools:context=".SignUpActivity">


    <EditText
        style="?android:textAppearanceSmall"

        android:id="@+id/signup_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edittext"
        android:gravity="center"
        android:hint="Email(skku.edu)"
        android:imeActionId="6"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true"


        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/signup_password"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />
    <EditText
        style="?android:textAppearanceSmall"

        android:id="@+id/signup_password"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_edittext_lock"
        android:gravity="center"
        android:imeActionId="6"
        android:imeOptions="actionUnspecified"

        android:maxLines="1"
        android:singleLine="true"


        android:layout_marginBottom="40dp"

        android:hint="Password"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/signup_submit"



        />

    <Button
        android:id="@+id/signup_submit"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:text="회원 가입하기"




        android:layout_marginBottom="160dp"
        android:background="@drawable/selector_clicked"



        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"


        />
</android.support.constraint.ConstraintLayout>